# Universal Query Translator - Environment Configuration
# Copy this file to .env and update the values for your local development

# PostgreSQL Configuration (Required for production database connection)
# Get from Replit or use your own PostgreSQL instance
DATABASE_URL=postgresql://user:password@host:port/database

# Optional: PostgreSQL connection details (used when DATABASE_URL is not available)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=universal_query_translator

# Application Configuration
PORT=5000
NODE_ENV=development

# AWS Configuration (for DynamoDB Local)
AWS_ACCESS_KEY_ID=fake
AWS_SECRET_ACCESS_KEY=fake
AWS_REGION=us-east-1

# Optional: Real AWS credentials for testing with real DynamoDB
# AWS_ACCESS_KEY_ID=your_real_access_key
# AWS_SECRET_ACCESS_KEY=your_real_secret_key
# AWS_REGION=us-east-1

# Database Connection Timeouts (in milliseconds)
DB_CONNECTION_TIMEOUT=5000
DB_RETRY_ATTEMPTS=3