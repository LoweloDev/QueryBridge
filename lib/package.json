{
  "name": "universal-query-translator",
  "version": "1.0.0",
  "description": "Universal database query abstraction library that translates common query language to multiple database formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/__tests__/**"
    ]
  },
  "keywords": [
    "database",
    "query",
    "translation",
    "abstraction",
    "sql",
    "mongodb",
    "elasticsearch",
    "dynamodb",
    "redis"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@elastic/elasticsearch": "^8.0.0",
    "mongodb": "^6.0.0",
    "ioredis": "^5.0.0",
    "pg": "^8.0.0"
  },
  "peerDependencies": {
    "@neondatabase/serverless": "^0.10.0"
  }
}